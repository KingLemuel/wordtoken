<link rel="stylesheet" type="text/css" href="/user_index.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css">
<div class="cont main">
	<h3>Recently Joined Users</h3>
	<div class="users animated fadeInDown">
		<% @users.each do |x| %>
			<%= link_to(x, class: 'no_underline') do %>
				<div class="user">
					<div class="img"><%= gravatar_for(x, 50) %></div>
					<div class="name"> <%= x.name %></div>
				</div>
			<% end %>
		<% end %>
		
	</div>
</div>